{
  "name": "x-fact-check",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "vite",
    "build": "npm run typecheck && vite build",
    "build:scripts": "npm run typecheck && vite build --config vite.scripts.config.ts",
    "typecheck": "npx tsc --noEmit",
    "upload": "vite scripts/upload.ts --config vite.scripts.config.ts",
    "fact-check": "npx tsx scripts/fact-check.cli.ts",
    "biome:check:write": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "get-note-article": "npx tsx scripts/get-note-articles.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.2",
    "@octokit/rest": "^22.0.0",
    "@slack/bolt": "^4.4.0",
    "@slack/web-api": "^7.9.2",
    "hono": "^4.7.10",
    "openai": "^4.0.0",
    "simple-git": "^3.28.0",
    "turndown": "^7.2.0",
    "twitter-api-v2": "^1.23.2",
    "undici": "^7.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@hono/vite-build": "1.6.2",
    "@hono/vite-dev-server": "0.20.0",
    "@types/node": "^22.15.21",
    "@types/turndown": "^5.0.5",
    "dotenv": "^16.5.0",
    "fast-glob": "^3.3.3",
    "lefthook": "^1.11.13",
    "rollup-plugin-commonjs": "10.1.0",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "vite": "7.0.2",
    "vitest": "3.2.4"
  }
}
